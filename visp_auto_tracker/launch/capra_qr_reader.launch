<launch>

  <arg name="capra_namespace" default="/capra" />

  <node pkg="visp_auto_tracker" type="visp_auto_tracker" name="visp_auto_tracker" ns="$(arg capra_namespace)" output="screen">
    <param name="model_path" value="$(find visp_auto_tracker)/models" />
    <param name="model_name" value="pattern" />
    <param name="debug_display" value="False" />
    <param name="camera_prefix" value="$(arg capra_namespace)" />
        
    <remap from="$(arg capra_namespace)/visp_auto_tracker/camera_info" to="$(arg capra_namespace)/usb_cam/camera_info"/>
    <remap from="$(arg capra_namespace)/visp_auto_tracker/image_raw" to="$(arg capra_namespace)/usb_cam/image_raw"/>
  </node>

</launch>